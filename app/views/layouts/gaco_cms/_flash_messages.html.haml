- flash.each do |msg_type, message|
  :ruby
    if %i[alert error].include?(msg_type.to_sym)
      flash_class = 'bg-danger'
    elsif %i[warning warn].include?(msg_type.to_sym)
      flash_class = 'bg-danger'
    else
      flash_class = 'bg-success'
    end
  .toast.align-items-center.text-white.border-0.fade.show{"data-bs-autohide" => "true", class: flash_class}
    .d-flex
      .toast-body= message
      %button.btn-close.btn-close-white.me-2.m-auto{"aria-label" => "Close", "data-bs-dismiss" => "toast", type: "button"}